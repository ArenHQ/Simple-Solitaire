<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="de.tobiasbielefeld.solitaire.ui.GameSelector"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/scrollViewGameChooser">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/tableLayoutGameChooser">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/layout_klondike">

                <TextView
                    android:text="@string/games_klondike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_klondike"
                    android:id="@+id/buttonStartKlondike"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_freecell">

                <TextView
                    android:text="@string/games_freecell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_freecell"
                    android:id="@+id/buttonStartFreecell"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_yukon">

                <TextView
                    android:text="@string/games_yukon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_yukon"
                    android:id="@+id/buttonStartYukon"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_spider">

                <TextView
                    android:text="@string/games_spider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_spider"
                    android:id="@+id/buttonStartSpider"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_simplesimon">

                <TextView
                    android:text="@string/games_simplesimon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_simple_simon"
                    android:id="@+id/buttonStartSimpleSimon"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_golf">

                <TextView
                    android:text="@string/games_golf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_golf"
                    android:id="@+id/buttonStartGolf"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small"
                    android:longClickable="true" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_pyramid">

                <TextView
                    android:text="@string/games_pyramid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_pyramid"
                    android:id="@+id/buttonStartPyramid"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_tripeaks">

                <TextView
                    android:text="@string/games_tripeaks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_tripeaks"
                    android:id="@+id/buttonStartTriPeaks"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_fortyeight">

                <TextView
                    android:text="@string/games_fortyeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_fortyeight"
                    android:id="@+id/buttonStartFortyEight"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small"
                    android:visibility="visible" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_mod3">

                <TextView
                    android:text="@string/games_mod3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_mod3"
                    android:id="@+id/buttonStartMod3"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_gypsy">

                <TextView
                    android:text="@string/games_gypsy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_gypsy"
                    android:id="@+id/buttonStartGypsy"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/layout_acesup">

                <TextView
                    android:text="@string/games_acesup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/menu_acesup"
                    android:id="@+id/buttonStartAcesUp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:background="@android:drawable/btn_default_small" />
            </LinearLayout>

        </TableRow>

    </TableLayout>


</ScrollView>
